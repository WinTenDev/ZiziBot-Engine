@page "/user"

<PageTitle>User</PageTitle>
<RadzenRow>
    <RadzenColumn Size="12">
        <RadzenText Text="User" TextStyle="TextStyle.H3" TagName="TagName.H1" />
        <RadzenText Text="Name" />
        <RadzenTextBox Trim="false" Name="InpName" Style="width: 50%"></RadzenTextBox>
        <RadzenText Text="Address" />
        <RadzenTextBox Trim="false" Name="InpAddress" Style="width: 100%"></RadzenTextBox>
        <RadzenButton Text="Save" Click="OnSaveUser"></RadzenButton>
        <RadzenDataGrid TItem="object"></RadzenDataGrid>
    </RadzenColumn>
</RadzenRow>