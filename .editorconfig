# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf

[*.cs]
indent_size = 4

[*.ts]
indent_size = 2
ij_typescript_use_double_quotes = false

[*.html]
indent_size = 2

[*.scss]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false